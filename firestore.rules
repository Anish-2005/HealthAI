rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to manage their own advice requests
    match /advice_requests/{doc} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Allow authenticated users to create contact messages
    match /contacts/{doc} {
      allow create: if request.auth != null;
    }
    
    // Allow authenticated users to create consultation bookings
    match /consultations/{doc} {
      allow create: if request.auth != null;
    }
    
    // Allow authenticated users to create emergency requests
    match /emergency_requests/{doc} {
      allow create: if request.auth != null;
    }
  }
}